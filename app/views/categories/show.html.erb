<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @category.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @category.description %>
</p>

<div class="row">
    <div class="col-lg-5">
        <%= link_to 'Edit', edit_category_path(@category), class: 'btn btn-warning' %>
        <%= link_to 'Back', categories_path, class: 'btn btn-info' %>
    </div>
</div>

<div class="box">
    <div class="block">
        <div class="msg">
            <div class="author">
                <div class="content">
                </div>
            </div>
        </div>
    </div>
</div>
<form method="post" id="sendMessage">
        <input type="text" id="content" data-room="<%= @category.id %>">
</form>
