<p id="notice"><%= notice %></p>

<div class="col-lg-12">
    <h1 class="super-title">Sélectionnez votre catégorie</h1>
    <hr>
    <br><br>
      <div class="circle">
        <%= link_to new_chat_room_path do %>
            <div class="category-first-letter">+</div>
                  <div class="category-title">Ajouter une catégorie</div>
        <% end %>
     </div>
      <% if @chat_rooms.any? %>
          <% @chat_rooms.each do |cr| %>
            <div class="circle">
                <%= link_to cr do %>
                  <div class="category-first-letter"><%= cr.title.capitalize.chars.first %></div>
                  <div class="category-title">#<%= cr.title.capitalize %></div>
                <% end %>
            </div>
          <% end %>
          <%= will_paginate @pokemons, renderer: BootstrapPagination::Rails %>
      <% end %>
</div>
