<div class="col-lg-12">
    <h1 class="super-title">Mes salons</h1>
    <hr>

    <%= form_tag(mine_chat_rooms_path, :method => "get", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Rechercher un salon" %>
            <%= submit_tag "Recherche", id: "submitSearch", class: "btn btn-info" %>
    <% end %>

    <div class="circle">
        <%= link_to new_chat_room_path do %>
            <div class="category-first-letter">+</div>
            <div class="category-title">Ajouter une catégorie</div>
        <% end %>
    </div>

    <% if @chat_rooms.present? %>
        <%= render @chat_rooms %>
    <% else %>
        <p>Aucun salon ne correspond à cette recherche <%= params[:search] %>.</p>
    <% end %>
</div>
