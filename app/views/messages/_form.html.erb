<%= form_for @message do |m| %>
<div class="row">
    <div class="form-group col-lg-5">
        <p>
            <%= m.label :user_id, 'user id' %><br>
            <%= m.text_field :user_id, class:'form-control' %>
        </p>
    </div>

    <div class="form-group col-lg-5">
        <p>
            <%= m.label :category, 'category' %><br>
            <%= m.text_field :category, class:'form-control' %>
        </p>
    </div>

    <div class="form-group col-lg-5">
        <p>
            <%= m.label :content, 'Content' %><br>
            <%= m.text_field :content, class:'form-control' %>
        </p>
    </div>
</div>

<p>
    <%= m.submit 'Submit', class: 'btn btn-primary' %>
</p>
<% end %>
