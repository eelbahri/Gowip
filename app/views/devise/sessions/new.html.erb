<h1 class="super-title"><%= t(".sign_in") %></h1>
<hr>

<div class="content-centered">
  <div class="row">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="col-lg-12">
      <%= f.input :email, required: false, autofocus: true %>
      <br>
      <%= f.input :password, required: false, class:'form-control' %>
      <br>
      <%= f.input :remember_me, class:'form-control', as: :boolean if devise_mapping.rememberable? %>


      <%= f.button :submit, t(".sign_in"), class: 'btn btn-primary big-button' %>
    </div>
  <% end %>

  <hr>
  <%= render "devise/shared/links" %>
</div>
</div>
